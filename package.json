{
  "name": "@wunderwa/lexical-json",
  "version": "0.6.0",
  "description": "Facebook Lexical: JSON to html convertor, TypeScript library",
  "author": "Andrei Zagoruiko <adkrix@gmail.com> (https://zor.su)",
  "homepage": "https://github.com/wunderwa/lexical-json",
  "repository": "github:wunderwa/lexical-json",
  "bugs": {
    "url": "https://github.com/wunderwa/lexical-json/issues"
  },
  "license": "MIT",
  "keywords": [
    "facebook",
    "Lexical",
    "json",
    "html",
    "typescript",
    "npm",
    "package"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsc && vite build --watch",
    "start": "vite --host --open",
    "build": "tsc && vite build",
    "build:types": "dts-bundle-generator --config ./dts-bundle-generator.config.ts",
    "lint:scripts": "eslint ./src --ext .ts",
    "lint:styles": "stylelint ./**/*.{css,scss}",
    "fmt": "prettier ./src --write",
    "fmt:css": "stylelint ./**/*.{css,scss} --fix"
  },
  "dependencies": {
    "docx": "^8.5.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@vitejs/plugin-react": "^4.2.1",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "html-react-parser": "^5.1.12",
    "prettier": "^3.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "save-as": "^0.1.8",
    "stylelint": "^16.2.1",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-sass-guidelines": "^11.0.0",
    "tslib": "^2.6.2",
    "typescript": "^5.8.2",
    "vite": "^5.4.14",
    "vite-plugin-dts": "^3.9.1"
  }
}
